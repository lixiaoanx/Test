<% validations.build_numericality unless validations.numericality %>
<% numericality = validations.numericality %>

<h3>Numericality</h3>

<%= f.fields_for :numericality, numericality do |ff| %>
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-prepend">
        <%= ff.select :lower_bound_check, options_for_enum_select(numericality.class, :lower_bound_check, numericality.lower_bound_check), {}, class: "form-control", class_for_error: "is-invalid" %>
      </div>
      <%= ff.number_field :lower_bound_value, step: 0.01, class: "form-control", class_for_error: "is-invalid" %>
      <%= ff.error_message :lower_bound_value, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-prepend">
        <%= ff.select :upper_bound_check, options_for_enum_select(numericality.class, :upper_bound_check, numericality.upper_bound_check), {}, class: "form-control", class_for_error: "is-invalid" %>
      </div>
      <%= ff.number_field :upper_bound_value, step: 0.01, class: "form-control", class_for_error: "is-invalid" %>
      <%= ff.error_message :upper_bound_value, class: "invalid-feedback" %>
    </div>
  </div>
<% end %>

<hr>
