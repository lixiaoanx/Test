<div class="form-group">
  <%= f.label :data_source_type %>
  <%= f.select :data_source_type, options_for_data_source_types(selected: options.data_source_type), { class_for_error: "is-invalid" }, class: "form-control" %>
  <%= f.error_message :data_source_type, class: "invalid-feedback" %>
</div>

<div class="form-group">
  <%= f.label :strict_select %>
  <div class="form-group">
    <div class="form-check form-check-inline">
      <%= f.check_box :strict_select, class: "form-check-input", id: "strict_select" %>
      <%= f.label :strict_select, "Can only select from data source", class: "form-check-label", for: "strict_select" %>
    </div>
  </div>
</div>
