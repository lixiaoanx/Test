  </div>
  <div class="col-auto">
    <%= f.number_field :days_before_end, class: "form-control", class_for_error: "is-invalid", min: 1, step: 1 %>
    <%= f.error_message :days_before_end, class: "invalid-feedback" %>
  </div>
</div>

<div class="form-group">
