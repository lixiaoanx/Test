<h4>Begin from</h4>

<div class="form-row align-items-center mb-2">
  <div class="col-auto">
    <div class="form-check">
      <%= f.radio_button :begin_from, "unlimited", id: "begin_from_unlimited", class: "form-check-input" %>
      <%= f.label :begin_from, "Unlimited", for: "begin_from_unlimited", class: "form-check-label" %>
    </div>
  </div>
</div>

<div class="form-row align-items-center mb-2">
  <div class="col-auto">
    <div class="form-check">
      <%= f.radio_button :begin_from, "today", id: "begin_from_today", class: "form-check-input" %>
      <%= f.label :begin_from, "Today with offset", for: "begin_from_today", class: "form-check-label" %>
    </div>
  </div>
  <div class="col-auto">
    <%= f.number_field :begin_from_today_days_offset, class: "form-control", step: 1, class_for_error: "is-invalid" %>
    <%= f.error_message :begin_from_today_days_offset, class: "invalid-feedback" %>
  </div>
</div>

<div class="form-row align-items-center mb-2">
  <div class="col-auto">
    <div class="form-check mb-2">
      <%= f.radio_button :begin_from, "date", id: "begin_from_date", class: "form-check-input" %>
      <%= f.label :begin_from, "Date", for: "begin_from_date", class: "form-check-label" %>
    </div>
  </div>
  <div class="col-auto">
    <%= f.date_field :begin, class: "form-control", class_for_error: "is-invalid" %>
    <%= f.error_message :begin, class: "invalid-feedback" %>
