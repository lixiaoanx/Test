<div class="form-group row">
  <%= f.label field.name, field.label, class: 'label col-sm-2 col-form-label' %>
  <div class="col-sm-10">
    <%= f.collection_check_boxes field.name, field.choices, :id, :label do |m| %>
      <div class="form-check form-check-inline">
        <%= m.check_box disabled: field.disabled?, class: "form-check-input", class_for_error: "is-invalid" %>
        <%= m.label class: "form-check-label" %>
      </div>
    <% end %>
    <%= f.error_message field.name, class: "invalid-feedback" %>
    <% if field.hint.present? %>
      <span class="form-text text-muted">
        <%= field.hint %>
      </span>
    <% end %>
  </div>

</div>
