<div class="form-group row">
  <div class="col-sm-2"><%= field.label %></div>
  <div class="col-sm-10">
    <div class="form-check form-check-inline">
      <%= f.check_box field.name, class: "form-check-input", id: field.id, required: field.required, disabled: field.disabled?, class_for_error: "is-invalid" %>
      <%= f.label field.name, field.label, class: "form-check-label", for: field.id %>
    </div>
    <%= f.error_message field.name, class: "invalid-feedback" %>
    <% if field.hint.present? %>
      <span class="form-text text-muted">
        <%= field.hint %>
      </span>
    <% end %>
  </div>
</div>
