<%= render "_workflow_core/transition_options/field_overridable", f: f, transition: transition, options: options %>

<%= render "_workflow_core/transition_options/votable", f: f, transition: transition, options: options %>

<div class="form-group">
  <%= f.label :pass_place %>
  <%= f.collection_select :pass_place_id,
                          transition.output_places, :id, :title_for_render,
                          {include_blank: true},
                          class: "form-control", class_for_error: "is-invalid"
  %>
  <%= f.error_message :pass_place_id, class: "invalid-feedback" %>
</div>

<div class="form-group">
  <%= f.label :veto_place %>
  <%= f.collection_select :veto_place_id,
                          transition.output_places, :id, :title_for_render,
                          {include_blank: true},
                          class: "form-control", class_for_error: "is-invalid"
  %>
  <%= f.error_message :veto_place_id, class: "invalid-feedback" %>
</div>
