<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t(".actions.new"), new_admin_tenant_path, class: "btn text-primary" %>
    </li>
  </ol>
<% end %>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="container">
      <h3 class="page-title">
        <%= t(".title") %>
      </h3>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= t(".table.permalink") %></th>
            <th><%= t(".table.name") %></th>
            <th><%= t(".table.redmine_host") %></th>
            <th><%= t(".table.created_at") %></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @tenants.each do |tenant| %>
            <tr>
              <td><%= tenant.permalink %></td>
              <td><%= tenant.name %></td>
              <td><%= link_to tenant.redmine_host, tenant.redmine_host, target: "_blank" %></td>
              <td><%= time_tag tenant.created_at %></td>
              <td>
                <%= link_to t(".table.actions.show"), admin_tenant_path(tenant) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <%= paginate @tenants %>
    </div>
  </div>
</div>
