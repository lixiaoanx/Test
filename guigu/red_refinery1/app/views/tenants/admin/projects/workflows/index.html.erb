<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t("shared.actions.new"), new_tenant_admin_project_workflow_path(@tenant, @project), class: "btn text-primary" %>
    </li>
  </ol>
<% end %>

<h1>
  <%= t(".title") %>
</h1>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              <th><%= t(".table.title") %></th>
              <th><%= t(".table.form") %></th>
              <th><%= t(".table.created_at") %></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @workflows.each do |workflow| %>
              <tr>
                <td><%= workflow.title %></td>
                <td><%= link_to workflow.form.title, tenant_admin_project_form_path(@tenant, @project, workflow.form) %></td>
                <td><%= time_tag workflow.created_at %></td>
                <td>
                  <%= link_to t("shared.actions.show"), tenant_admin_project_workflow_url(@tenant, @project, workflow) %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

        <%= paginate @workflows %>
      </div>
    </div>
  </div>
</div>
