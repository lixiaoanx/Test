<%= form_with(model: [tenant, :admin, project, workflow, transition.becomes(Transition)], scope: :transition, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: "required", class: "form-control", class_for_error: "is-invalid" %>
    <%= f.error_message :title, class: "invalid-feedback" %>
  </div>

  <div class="form-group">
    <%= f.label :type %>
    <%= f.select :type, options_for_transition_types(selected: transition.class.to_s), { class_for_error: "is-invalid" }, required: "required", class: "form-control" %>
    <%= f.error_message :form_id, class: "invalid-feedback" %>
  </div>

  <%= f.submit transition.persisted? ? t("shared.form.submit.update") : t("shared.form.submit.create"), class: "btn btn-primary" %>
  <%= link_to "Back", tenant_admin_project_workflow_transitions_path(tenant, project, workflow), class: "btn btn-link" %>
<% end %>
