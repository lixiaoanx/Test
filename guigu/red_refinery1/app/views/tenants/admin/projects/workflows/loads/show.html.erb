<div class="row justify-content-center">
  <div class="col-lg-12">
    <%= render "tenants/admin/projects/workflows/tabs" %>

    <div class="card tab-content">
      <div class="card-body">
        <%= form_with url: tenant_admin_project_workflow_load_path(@tenant, @project, @workflow), method: :patch, local: true do |f| %>
          <div class="form-group">
            <%= f.label :bpmn_xml %>
            <%= f.text_area :bpmn_xml, rows: 20, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :bpmn_file %>
            <%= f.file_field :bpmn_file, rows: 20, class: "form-control" %>
          </div>

          <%= f.submit "Load from BPMN", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
