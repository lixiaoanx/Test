<%= form_with(model: options, scope: :options, url: tenant_admin_project_workflow_transition_options_path(tenant, project, workflow, transition), method: :patch, local: true) do |f| %>
  <%= render "_workflow_core/transition_options/#{transition.type_key}", f: f, tenant: tenant, project: project, transition: transition, options: options %>

  <%= f.submit "Update", class: 'btn btn-primary' %>
  <%= link_to 'Back', tenant_admin_project_workflow_transitions_path(tenant, project, workflow), class: 'btn btn-link' %>
<% end %>
