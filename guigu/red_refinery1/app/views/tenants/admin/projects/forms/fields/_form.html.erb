<%- url = field.new_record? ? tenant_admin_project_form_fields_path(tenant, project, form) : tenant_admin_project_form_field_path(tenant, project, form, field) %>
<%= form_with(model: field, scope: :field, url: url, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: "required", disabled: field.persisted?, class: "form-control", class_for_error: "is-invalid" %>
    <%= f.error_message :name, class: "invalid-feedback" %>
    <span class="form-text text-muted">
      <%= t(".tips.name") %>
    </span>
  </div>

  <div class="form-group">
    <%= f.label :label %>
    <%= f.text_field :label, required: "required", class: "form-control", class_for_error: "is-invalid" %>
    <%= f.error_message :label, class: "invalid-feedback" %>
  </div>

  <div class="form-group">
    <%= f.label :hint %>
    <%= f.text_field :hint, class: "form-control", class_for_error: "is-invalid" %>
    <%= f.error_message :hint, class: "invalid-feedback" %>
  </div>

  <div class="form-group">
    <%= f.label :type %>
    <%= f.select :type, options_for_field_types(form, selected: field.class.to_s), { class_for_error: "is-invalid" }, disabled: field.persisted?, class: "form-control" %>
    <%= f.error_message :type, class: "invalid-feedback" %>
  </div>

<!--  <div class="form-group">-->
    <%#= f.label :accessibility %>
<!--    <div class="form-group">-->
      <%# Field.accessibilities.each do |k, _| %>
<!--        <div class="form-check form-check-inline">-->
          <%#= f.radio_button :accessibility, k, class: "form-check-input", id: "field_accessibility_#{k}" %>
          <%#= f.label :accessibility, Field.human_enum_value(:accessibility, k), class: "form-check-label", for: "field_accessibility_#{k}" %>
<!--        </div>-->
      <%# end %>
<!--    </div>-->
<!--  </div>-->

  <%= f.submit field.persisted? ? t("shared.form.submit.update") : t("shared.form.submit.create"), class: "btn btn-block btn-primary" %>
<% end %>
