<%= form_with(model: [tenant, :admin, project, form], scope: :form, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: "required", disabled: form.persisted?, class: "form-control", class_for_error: "is-invalid" %>
    <%= f.error_message :name, class: "invalid-feedback" %>
    <span class="form-text text-muted">
      <%= t(".tips.name") %>
    </span>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: "required", class: "form-control", class_for_error: "is-invalid" %>
    <%= f.error_message :title, class: "invalid-feedback" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", class_for_error: "is-invalid" %>
    <%= f.error_message :description, class: "invalid-feedback" %>
  </div>

  <%= f.submit form.persisted? ? t("shared.form.submit.update") : t("shared.form.submit.create"), class: "btn btn-primary" %>
  <% if form.persisted? %>
    <%= link_to t("shared.form.submit.destroy"), tenant_admin_project_form_path(tenant, project, form), method: :delete, class: "btn btn-danger", data: { confirm: t("shared.confirmation.destroy") } %>
  <% end %>
<% end %>
