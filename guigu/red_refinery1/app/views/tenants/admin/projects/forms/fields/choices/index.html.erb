<div class="row justify-content-center">
  <div class="col-lg-12">
    <%= render "tenants/admin/projects/forms/fields/tabs" %>

    <div class="card tab-content">
      <div class="card-body">
        <%= link_to t(".new"), new_tenant_admin_project_form_field_choice_path(@tenant, @project, @form, @field), class: "btn btn-primary" %>

        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              <th><%= t(".table.label") %></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @choices.each do |choice| %>
              <tr>
                <td><%= choice.label %></td>
                <td>
                  <%= link_to t("shared.actions.edit"), edit_tenant_admin_project_form_field_choice_path(@tenant, @project, @form, @field, choice) %> |
                  <%= link_to t("shared.actions.destroy"), tenant_admin_project_form_field_choice_path(@tenant, @project, @form, @field, choice), method: :delete, data: {confirm: t("shared.confirmation.destroy")} %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
