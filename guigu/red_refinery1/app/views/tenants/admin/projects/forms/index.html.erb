<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t("shared.actions.new"), new_tenant_admin_project_form_path(@tenant, @project), class: "btn text-primary" %>
      <%= link_to "Generate form", random_tenant_admin_project_forms_path(@tenant, @project), method: :post, class: "btn text-primary" %>
    </li>
  </ol>
<% end %>

<h1>
  <%= t(".title") %>
</h1>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              <th><%= t(".table.name") %></th>
              <th><%= t(".table.title") %></th>
              <th><%= t(".table.created_at") %></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @forms.each do |form| %>
              <tr>
                <td><%= form.name %></td>
                <td><%= form.title %></td>
                <td><%= time_tag form.created_at %></td>
                <td>
                  <%= link_to t("shared.actions.show"), tenant_admin_project_form_url(@tenant, @project, form) %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

        <%= paginate @forms %>
      </div>
    </div>
  </div>
</div>
