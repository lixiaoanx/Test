<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t("shared.actions.new"), new_tenant_admin_project_workflow_category_path(@tenant, @project), class: "btn text-primary" %>
    </li>
  </ol>
<% end %>

<h1>
  <%= t(".title") %>
</h1>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              <th><%= t(".table.title") %></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @workflow_categories.each do |workflow_category| %>
              <tr>
                <td><%= workflow_category&.title %></td>
                <td>
                  <%= link_to t("shared.actions.edit"), edit_tenant_admin_project_workflow_category_path(@tenant, @project, workflow_category) %> |
                  <%= link_to t("shared.actions.destroy"), tenant_admin_project_workflow_category_url(@tenant, @project, workflow_category), method: :delete, data: { confirm: t("shared.confirmation.destroy") } %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
