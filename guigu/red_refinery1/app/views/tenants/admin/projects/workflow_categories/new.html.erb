      <%= link_to t("shared.actions.back"), tenant_admin_project_workflow_categories_path(@tenant), class: "btn text-primary" %>
    </li>
  </ol>
<% end %>

<h1>
  <%= t(".title") %>
</h1>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <%= render 'form', tenant: @tenant, project: @project, workflow_category: @workflow_category %>
      </div>
    </div>
  </div>
</div>
