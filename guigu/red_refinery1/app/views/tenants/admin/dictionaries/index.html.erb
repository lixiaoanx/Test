<%- content_for :action_bar do %>
  <ol>
    <li class="action_bar-item">
      <%= link_to t("shared.actions.new"), new_tenant_admin_dictionary_path(@tenant), class: "btn text-primary" %>
    </li>
  </ol>
<% end %>

<h1>
  <%= t(".title") %>
</h1>

<div class="row justify-content-center">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              <th><%= t(".table.scope") %></th>
              <th><%= t(".table.value") %></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @dictionaries.each do |dictionary| %>
              <tr>
                <td><%= dictionary.scope %></td>
                <td><%= dictionary.value %></td>
                <td>
                  <%= link_to t("shared.actions.edit"), edit_tenant_admin_dictionary_url(@tenant, dictionary) %> |
                  <%= link_to t("shared.actions.destroy"), tenant_admin_dictionary_url(@tenant, dictionary), method: :delete, data: { confirm: t("shared.confirmation.destroy") } %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
